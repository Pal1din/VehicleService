{
  "IdentityServer": {
    "TokenOptions": {
      "Scheme": "Bearer",
      "Authority": "https://localhost:7138",
      "Audience": "vehicle.resource",
      "RequireHttpsMetadata": false
    },
    "Policies": [
      {
        "Name": "CanRead",
        "Claims": [
          {
            "Type": "scope",
            "Value": "read"
          },
          {
            "Type": "permission",
            "Value": "read"
          }
        ]
      },
      {
        "Name": "CanWrite",
        "Claims": [
          {
            "Type": "scope",
            "Value": "write"
          },
          {
            "Type": "permission",
            "Value": "write"
          }
        ]
      }
    ]
  },
  "SwaggerUi": {
    "Url": "/swagger/v1/swagger.json",
    "Name": "VehicleService.API",
    "ClientId": "vehicle-service",
    "ClientSecret": "secret"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Server=localhost;Port=5432;Database=auto_stat;User Id=postgres;Password=123;"
  }
}
